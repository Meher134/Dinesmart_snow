        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    gs.log("## DINE_SMART_LOG ##: BR started for Dining Order: " + current.getDisplayValue());

    // Initialize total and summary
    var total = 0;
    var summary = [];

    // Query all Order Items linked to this Dining Order
    var orderItemsGR = new GlideRecord('x_656484_dinesmart_order_items');
    orderItemsGR.addQuery('order', current.sys_id);
    orderItemsGR.query();
    gs.log("## DINE_SMART_LOG ##: Found " + orderItemsGR.getRowCount() + " Order Items.");

    while (orderItemsGR.next()) {
        var price = parseFloat(orderItemsGR.price.toString());
        var quantity = parseInt(orderItemsGR.quantity.toString());
        total += price * quantity;
        summary.push(quantity + "x " + orderItemsGR.menu_item.getDisplayValue());
    }

    // Update Dining Order fields
    current.total_price = total;
    current.order_summary = summary.join(", ");
    current.update();
    gs.log("## DINE_SMART_LOG ##: Dining Order updated. Total: " + total + ", Summary: " + summary.join(", "));

    // Update linked Requested Item if exists
    if (current.requested_item) {
        var reqItemGR = new GlideRecord('sc_req_item');
        if (reqItemGR.get(current.requested_item)) {
            reqItemGR.price = total;
            reqItemGR.short_description = summary.join(", ");
            reqItemGR.update();
            gs.log("## DINE_SMART_LOG ##: Requested Item updated successfully.");
        } else {
            gs.log("## DINE_SMART_LOG ##: ERROR - Could not find Requested Item with ID: " + current.requested_item);
        }
    }

})(current, previous);
]]></script>
