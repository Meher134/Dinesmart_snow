        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Exit if there is no menu item selected
    if (!current.menu_item) {
        return;
    }

    // Get the price from the referenced Menu Item record
    var menuGR = new GlideRecord('x_656484_dinesmart_menu_items'); 
    if (menuGR.get(current.menu_item)) {
        current.u_unit_price = parseFloat(menuGR.getValue('price')) || 0;
    }

    // Ensure quantity is at least 1
    var qty = parseInt(current.getValue('quantity'), 10);
    if (!qty || qty < 1) {
        qty = 1;
        current.quantity = qty;
    }

    // Calculate the line total (price * quantity)
    var unitPrice = parseFloat(current.u_unit_price) || 0;
    current.u_line_total = parseFloat((unitPrice * qty).toFixed(2));

})(current, previous);]]></script>
