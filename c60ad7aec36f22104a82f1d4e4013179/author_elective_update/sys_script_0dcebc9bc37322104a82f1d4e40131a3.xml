        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Determine the parent order ID, even if the item was deleted
    var orderSysId = current.order || (previous ? previous.order : null);
    if (!orderSysId) {
        return;
    }

    // Use GlideAggregate to efficiently sum the line totals
    var ga = new GlideAggregate('x_656484_dinesmart_order_items');
    ga.addQuery('order', orderSysId);
    ga.addAggregate('SUM', 'u_line_total');
    ga.query();
    var total = 0;
    if (ga.next()) {
        total = parseFloat(ga.getAggregate('SUM', 'u_line_total')) || 0;
    } 

    // Build a readable summary by querying the line items again
    var lines = [];
    var itemGR = new GlideRecord('x_656484_dinesmart_order_items');
    itemGR.addQuery('order', orderSysId);
    itemGR.query();
    while (itemGR.next()) {
        var menuName = itemGR.getDisplayValue('menu_item') || 'Item';
        var qty = parseInt(itemGR.getValue('quantity'), 10) || 1;
        lines.push(qty + 'x ' + menuName);
    }

    // Update the parent Dining Order record
    var orderGR = new GlideRecord('x_656484_dinesmart_dining_orders');
    if (orderGR.get(orderSysId)) {
        orderGR.total_price = parseFloat(total.toFixed(2));
        orderGR.order_summary = lines.join(', '); // Use ', ' for a cleaner look
        orderGR.update();
    }

    // Optional: Update the original Requested Item (RITM)
    try {
        var ritmSysId = orderGR.requested_item; 
        if (ritmSysId) {
            var ritmGR = new GlideRecord('sc_req_item');
            if (ritmGR.get(ritmSysId)) {
                ritmGR.price = orderGR.total_price;
                ritmGR.short_description = orderGR.order_summary;
                ritmGR.update();
            }
        }
    } catch (e) {
        gs.warn('DineSmart BR: failed to update RITM: ' + e);
    }

})(current, previous);]]></script>
