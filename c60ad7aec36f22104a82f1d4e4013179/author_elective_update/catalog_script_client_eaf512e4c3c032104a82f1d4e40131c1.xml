        <script><![CDATA[function onSubmit() {
    // Stop the default submission
    // (so ServiceNow doesn’t create a normal RITM in the backend)
    goToSummary();
    return false; 
}

function goToSummary() {
    var menuItem = g_form.getValue('menu_item');         // variable name
    var qty      = g_form.getValue('quantity');
    var instr    = g_form.getValue('special_instructions');

    var ga = new GlideAjax('x_656484_dinesmart.DineSmartOrderUtils');
    ga.addParam('sysparm_name', 'getOrderSummary');
    ga.addParam('sysparm_menu_item', menuItem);
    ga.addParam('sysparm_quantity', qty);
    ga.addParam('sysparm_instructions', instr);

    ga.getXMLAnswer(function(response) {
        var data = JSON.parse(response);
        if (data.error) {
            alert("Error: " + data.error);
            return;
        }

        // Redirect to custom Order Summary UI Page
        var url = '/order_summary.do?item=' + encodeURIComponent(data.menu_item) +
                  '&price=' + data.price +
                  '&qty=' + data.quantity +
                  '&total=' + data.total +
                  '&instr=' + encodeURIComponent(data.special_instructions);

        window.location = url;
    });
}
]]></script>
